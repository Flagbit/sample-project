{
  "require": {
    "php": "7.0.*",
    "lizards-and-pumpkins/catalog": "0.5.2-alpha",
    "lizards-and-pumpkins/lib-key-value-store-filesystem": "0.4.1-alpha",
    "lizards-and-pumpkins/lib-search-engine-filesystem": "0.2.1-alpha",
    "lizards-and-pumpkins/lib-queue-filesystem": "0.3.1-alpha"
  },
  "require-dev": {
    "phpunit/phpunit": "5.3.*",
    "lizards-and-pumpkins/coding-standards": "dev-master",
    "league/climate": "^3.2.0"
  },
  "autoload": {
    "psr-4": {"LizardsAndPumpkins\\": "src/lizards-and-pumpkins/src"}
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.lizardsandpumpkins.com"
    }
  ],
  "scripts": {
    "test": [
      "vendor/bin/phpunit -c tests/Unit/phpunit.xml.dist"],
    "sniff": "vendor/bin/phpcs --runtime-set ignore_warnings_on_exit true --runtime-set ignore_errors_on_exit true -p --colors --encoding=utf-8 --standard=vendor/lizards-and-pumpkins/coding-standards/src/LizardsAndPumpkins/ src/ tests/"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
