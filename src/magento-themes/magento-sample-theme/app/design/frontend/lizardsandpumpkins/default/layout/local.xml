<?xml version="1.0"?>
<layout>
    <default>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
            <block type="lizardsandpumpkins_demotheme/page_html_topmenu_menu" name="mobile.menu" template="page/html/topmenu/mobile-menu.phtml"/>
        </reference>

        <reference name="head">
            <action method="removeItem">
                <type>js</type>
                <name>scriptaculous/builder.js</name>
            </action>
            <action method="removeItem">
                <type>js</type>
                <name>scriptaculous/effects.js</name>
            </action>
            <action method="removeItem">
                <type>js</type>
                <name>scriptaculous/dragdrop.js</name>
            </action>
            <action method="removeItem">
                <type>js</type>
                <name>scriptaculous/controls.js</name>
            </action>
            <action method="removeItem">
                <type>js</type>
                <name>scriptaculous/slider.js</name>
            </action>
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/styles.css</name>
            </action>
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/print.css</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>css/basic.css</name>
            </action>
        </reference>

        <reference name="header">
            <block type="core/template" name="minicartAndLogin" as="miniCart" template="page/html/minicart.phtml"/>
            <remove name="top.menu"/>
            <block type="lizardsandpumpkins_demotheme/page_html_topmenu_menu" name="main.menu" template="page/html/topmenu/main-menu.phtml"/>
        </reference>

        <reference name="footer">
            <block type="newsletter/subscribe" name="footer.newsletter" as="newsletter" template="newsletter/subscribe.phtml"/>
        </reference>

        <reference name="left">
            <remove name="left.permanent.callout"/>
            <remove name="left.newsletter"/>
        </reference>

        <reference name="right">
            <remove name="right.permanent.callout"/>
        </reference>

        <reference name="before_body_end">
            <block type="core/text" name="header-js">
                <action method="setText">
                    <text><![CDATA[<script src="/skin/frontend/lizardsandpumpkins/default/js/modules/header.js"></script>]]></text>
                </action>
            </block>
        </reference>
    </default>

    <catalog_category_default>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/modules/catalog.css</name>
            </action>
        </reference>
    </catalog_category_default>

    <catalog_category_layered>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-left.phtml</template>
            </action>
        </reference>

        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/modules/catalog.css</name>
            </action>
        </reference>
    </catalog_category_layered>

    <catalog_product_view>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>

        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/modules/product.css</name>
            </action>
        </reference>

        <reference name="before_body_end">
            <block type="core/text" name="product-js">
                <action method="setText">
                    <text><![CDATA[<script src="/skin/frontend/lizardsandpumpkins/default/js/modules/product.js"></script>]]></text>
                </action>
            </block>
        </reference>
    </catalog_product_view>

    <catalogsearch_result_index>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>

        <reference name="head">
            <action method="addCss"><stylesheet>css/modules/search-results.css</stylesheet></action>
        </reference>
    </catalogsearch_result_index>

    <cms_index_index>
        <reference name="head">
            <action method="addCss"><stylesheet>css/modules/homepage.css</stylesheet></action>
        </reference>
    </cms_index_index>

    <customer_account_login>
        <reference name="head">
            <action method="addCss"><stylesheet>css/modules/customer-login.css</stylesheet></action>
        </reference>

        <reference name="content">
            <block type="customer/form_register" name="customer_form_register" template="customer/form/login_register.phtml">
                <action method="append"><block>customer.form.register.fields.before</block><alias>form_fields_before</alias></action>
                <action method="append"><block>customer_form_user_attributes</block></action>
                <action method="append"><block>customer_form_address_user_attributes</block></action>
            </block>
        </reference>
    </customer_account_login>

    <customer_account>
        <remove name="catalog.compare.sidebar"/>
        <remove name="sale.reorder.sidebar"/>
        <remove name="cart_sidebar"/>

        <reference name="head">
            <action method="addCss"><stylesheet>css/modules/customer.css</stylesheet></action>
        </reference>
    </customer_account>

    <sales_order_view>
        <reference name="order_totals">
            <action method="setLabelProperties"><value>colspan="3" class="text-right"</value></action>
            <action method="setValueProperties"><value>class="last text-right"</value></action>
        </reference>
    </sales_order_view>

    <sales_order_invoice>
        <reference name="invoice_totals">
            <action method="setLabelProperties"><value>colspan="3" class="text-right"</value></action>
            <action method="setValueProperties"><value>class="last text-right"</value></action>
        </reference>
    </sales_order_invoice>

    <sales_order_creditmemo>
        <reference name="creditmemo_totals">
            <action method="setLabelProperties"><value>colspan="3" class="text-right"</value></action>
            <action method="setValueProperties"><value>class="last text-right"</value></action>
        </reference>
    </sales_order_creditmemo>

    <PRODUCT_TYPE_configurable>
        <reference name="product.info">
            <remove name="product.info.configurable"/>
        </reference>

        <reference name="product.info.options.wrapper.bottom">
            <block type="catalog/product_view_type_configurable" name="product.info.configurable" as="product_type_data" template="catalog/product/view/type/default.phtml">
                <block type="core/text_list" name="product.info.configurable.extra" as="product_type_data_extra" translate="label">
                    <label>Product Extra Info</label>
                </block>
            </block>
        </reference>
    </PRODUCT_TYPE_configurable>
</layout>
